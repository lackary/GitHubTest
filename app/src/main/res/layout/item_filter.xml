<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/filter_repos"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <RadioGroup
        android:id="@+id/radio_group_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/text_view_filter"
        app:layout_constraintStart_toStartOf="parent">
        <RadioButton
            android:id="@+id/radio_button_gt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gt"/>
        <RadioButton
            android:id="@+id/radio_button_gt_eq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gt_eq"/>
        <RadioButton
            android:id="@+id/radio_button_eq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eq"/>
        <RadioButton
            android:id="@+id/radio_button_lt_eq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lt_eq"/>
        <RadioButton
            android:id="@+id/radio_button_lt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lt"/>

    </RadioGroup>
<!--    <androidx.appcompat.widget.AppCompatSpinner-->
<!--        android:id="@+id/spinner_filter_condition"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginStart="8dp"-->
<!--        android:textAlignment="center"-->
<!--        android:gravity="center"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintStart_toEndOf="@id/text_view_filter"/>-->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_edit_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/radio_group_condition"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>